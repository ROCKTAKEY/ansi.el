#!/usr/bin/env emacs --script

(let ((current-directory (file-name-directory load-file-name)))
  (setq ansi-test-path (expand-file-name "." current-directory))
  (setq ansi-root-path (expand-file-name ".." current-directory)))

(add-to-list 'load-path ansi-root-path)
(add-to-list 'load-path ansi-test-path)

(require 'ansi)
(require 'ert)
(require 'el-mock)

(dolist (test-file (or argv (directory-files ansi-test-path t "-test.el$")))
  (load-file test-file))

(ert-run-tests-batch t)
